JS代码（注释
function getEndTime(myYear){
    var myEndTime = new Date(''+myYear+'/06/07 00:00:00');//设置高考时间
    return myEndTime;
}

function countDown(){//倒计时
    var mydate = new Date();
    var year = '2021';
    var EndTime = getEndTime(year);//设置日期
    var NowTime = new Date();//更新日期
    if( (EndTime.getTime() - NowTime.getTime() ) < 0){//高考年份小于现在年份时
        year = mydate.getFullYear() + 1;//年份+1
        EndTime = getEndTime(year);//替换
    }
    var t = EndTime.getTime() - NowTime.getTime();//算出时间



    var d=Math.floor(t/1000/60/60/24);//天数
    var h=Math.floor(t/1000/60/60%24);//小时数
    var m=Math.floor(t/1000/60%60);//分钟数
    var s=Math.floor(t/1000%60);//秒数

    document.getElementById('day').innerText = d;
    document.getElementById('hour').innerText = h;
    document.getElementById('minute').innerText = m;
    document.getElementById('second').innerText = s;
} 
setInterval(countDown,1000);
